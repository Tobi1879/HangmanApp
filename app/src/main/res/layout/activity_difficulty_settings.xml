<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DifficultySettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@drawable/haeuschenbackground"
        >

        <TextView
            android:id="@+id/textViewInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:text="Difficulty Settings"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingLeft="70dp"
            android:paddingRight="70dp">

            <TextView
                android:id="@+id/textView1Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Player"
                android:textSize="24sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButtonEasy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Easy (10 mistakes & 6-10 letters)" />

                <RadioButton
                    android:id="@+id/radioButtonMedium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medium (10 mistakes & 11-15 letters)" />

                <RadioButton
                    android:id="@+id/radioButtonHard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hard (5 mistakes & 11-15 letters)" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/textView2Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 Players"
                android:textSize="24sp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:id="@+id/radioButton5Mistakes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 mistakes allowed" />

                <RadioButton
                    android:id="@+id/radioButton10Mistakes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 mistakes allowed" />
            </RadioGroup>


            <Button
                android:id="@+id/buttonExit"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:text="Save & Exit"
                android:textSize="30dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewHangman2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hangman_removebg_preview" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>